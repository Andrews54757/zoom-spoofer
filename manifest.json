{
    "manifest_version": 2,
    "name": "Zoom Spoofer",
    "description": "Spoofs Zoom's 'attendee attention tracking' system in their web-based client",
    "version": "1.0.0",
    "author": "Andrew S",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "icons": {
        "48": "img/icon48.png",
        "64": "img/icon64.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
        "default_icon": "img/icon128.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [{
        "matches": ["*://*.zoom.us/wc/*"],
        "all_frames": true,
        "run_at": "document_start",
        "js": ["content.js"]
    }],
    "incognito": "split",
    "permissions": [
        "*://*.zoom.us/*",
        "storage",
        "tabs",
        "webRequest",
        "webRequestBlocking"
    ]
}